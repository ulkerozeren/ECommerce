@model Product

<div class="row" style="padding-top:60px">
    <div class="col-md-5 col-md-offset-3">
        <form>
            <input type="hidden" id="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="formGroupExampleInput">Ürün Adı</label>
                <input type="text" class="form-control" id="ProductName" value="@Model.Name" />
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Ürün Açıklaması</label>
                <input type="text" class="form-control" id="ProductDescription" value="@Model.Description">
            </div>
            
            <input class="btn btn-primary"  type="button" value="Güncelle" onclick="ECommerce.Page.Product.Update();" />
</form>
    </div>



    <script>
        $(document).ready(function () {
            ECommerce.Page.Category.List();
        });
    </script>

</div>